<div class="container" id="login-form">
  <div class="row justify-content-center">
    <form class="form-group col-lg-3 col-offset-6 centered shadow-lg mt-3 pb-3 px-3 rounded" id="login-form-card">
      <h3 class="text-center my-2" id="form-h3">Login</h3>
      <input type="email" placeholder="Email Address" name="email" id="email-input"
        class="form-input rounded col-12 mb-2 text-white" />
      <input type="password" placeholder="Password" name="password" id="password-input"
        class="form-input rounded col-12 mb-2 text-white" />
      <button type="submit" class="rounded col-12" id="gold-btn">Login</button>
    </form>
  </div>
</div>

<script src="/javascript/login.js"></script>