<div class="container-fluid">
  {{#if loggedIn}}
  <section id="new-post" class="center col-12  col-lg-3">
    <div>
      <input type="text" placeholder="Enter text here to create a new post" name="post-text" id="post-text"/>
      <button type="submit">Post</button>  
    </div>
  </section>
  {{/if}}
  {{#each posts as |post|}}
  <section class="center">
    {{> post-info post }}
  </section>
  {{/each}}
</div>

<script src="/javascript/add-post.js"></script>
<script src="/javascript/search.js"></script>