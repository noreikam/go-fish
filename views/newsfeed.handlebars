<div class="container-fluid row justify-content-center">
  <div class="row justify-content-center mt-3">
    {{#if loggedIn}}
    <form id="new-post">
      <div class="row justify-content-center">
        <input type="text" placeholder="What's on your mind" name="post-text" id="post-text"
          class="col-8 rounded border-0 shadow" />
        <button type="submit" class="btn btn-primary mt-1 col-5 py-1 border-0 shadow" id="post-btn">Post</button>
      </div>
    </form>
    {{/if}}
  </div>

  <div>
    <h3 class="text-center my-3">News Feed</h3>
  </div>

  <ol class="post-list h-100">
    {{#each posts as |post| }}
    <ul>
      {{> post-info post }}
    </ul>
    {{/each}}
  </ol>

  {{#if loggedIn}}
  <script src="/javascript/add-post.js"></script>
  <script src="/javascript/search.js"></script>
  {{/if}}