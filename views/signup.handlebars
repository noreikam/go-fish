<div id="signup-form" class="container">
  <div class="row justify-content-center">
    <form class="form-group col-lg-3 col-offset-6 centered shadow-lg mt-3 pb-3 px-3 rounded" name="signup"
      id="form-signup">
      <h3 class="text-center my-2" id="form-h3">Sign Up</h3>
      <input type="email" placeholder="Email Address" name="email" id="email-signup"
        class="form-input rounded col-12 mb-2" />
      <input type="password" placeholder="Password" name="password" id="password-signup"
        class="form-input rounded col-12 mb-2" />
      <input type="password" placeholder="Confirm Password" name="password" id="password-signup"
        class="form-input rounded col-12 mb-2" />
      <input type="text" placeholder="Username" name="username" id="username-signup"
        class="form-input rounded col-12 mb-2" />
      <button type="submit" class="rounded col-12" id="gold-btn">Submit</button>
    </form>
  </div>
</div>

<script src="/javascript/signup.js"></script>