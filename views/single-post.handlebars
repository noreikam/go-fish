<article class="center">
  <h6>{{user.username}}</h6>
  <p>{{post_text}}</p>
  <h6>{{vote_count}} {{format_plural "vote" vote_count}}  &centerdot;  {{post.comments.length}} {{format_plural "comment" post.comments.length}}  &centerdot;  Posted on {{format_date created_at}}</h6>
  {{#if loggedIn}}
  <form class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">Add comment</button>
    </div>
  </form>
  {{/if}}

  {{> comments post.comments}}
</article>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}